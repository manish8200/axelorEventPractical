<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

  <grid model="com.axelor.event.db.EventRegistration" title="EventsRegistration" name="eventRegistration-grid">
    <field name="flatHouseNo" />
  <field name="event"/>
  <field name="name"/>
  <field name="email"/>
  <field name="address"/>
  <field name="registrationDate"/>
  <field name="amount"/>

  </grid>



  <form model="com.axelor.event.db.EventRegistration"  title="EventRegistration" name="eventRegistration-form" width="large" onNew="action-method-setEvent-From-EventContext">
  <panel title="Event Registration" colSpan="6">

 <field name="event" onChange="action-record-set-event-address"/>
  <field name="name"/>
  <field name="email" widget="email"/>
  <field name="address"/>
  <field name="registrationDate" onChange="action-method-event-setAmountCollected"/>
  <field name="amount"/>

  </panel>
  </form>
  
  <action-method name="action-method-setEvent-From-EventContext">
  <call class="com.axelor.event.db.web.EventController" method="setEventRegList"/>
  </action-method>

<action-record name="action-record-set-event-address" model="com.axelor.event.db.EventRegistration">
<field name="address" expr="eval: event.address"/>
</action-record>

<action-method name="action-method-event-setAmountCollected">
<call class="com.axelor.event.db.web.EventController" method="setAmount"/>
</action-method>


  </object-views>
